#!/bin/sh
# Pre-commit hook to check Go formatting

# Get list of staged .go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_GO_FILES" ]; then
    exit 0
fi

# Check formatting
UNFORMATTED=$(echo "$STAGED_GO_FILES" | xargs gofmt -s -l 2>/dev/null)

if [ -n "$UNFORMATTED" ]; then
    echo "The following files need formatting (gofmt -s):"
    echo "$UNFORMATTED"
    echo ""
    echo "Run: gofmt -s -w ."
    exit 1
fi

exit 0
